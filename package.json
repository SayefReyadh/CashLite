{
  "name": "cashlite-pwa",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight, minimalistic finance tracker PWA",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/jspdf": "^1.3.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dexie": "^3.2.4",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.294.0",
    "nanoid": "^5.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^0.34.6",
    "workbox-window": "^7.0.0"
  },
  "keywords": [
    "finance",
    "cashbook",
    "expense-tracker",
    "pwa",
    "react",
    "typescript",
    "offline-first"
  ],
  "author": "SayefReyadh",
  "license": "MIT",
  "homepage": "https://github.com/SayefReyadh/CashLite",
  "repository": {
    "type": "git",
    "url": "https://github.com/SayefReyadh/CashLite.git"
  }
}
